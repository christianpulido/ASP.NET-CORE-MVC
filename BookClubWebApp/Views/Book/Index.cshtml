@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div class="row mb-3">
        <div class="col-8">
            <h2 class="m-0 text-primary">Books List</h2>
        </div>

        <div class="col-4 text-end">
            <button class="btn btn-primary">
                <a class="text-white text-decoration-none" asp-controller="Book" asp-action="Create">
                    Add a book
                </a>
            </button>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead class="text-center">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Info</th>
                <th>Link</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%">@obj.Title</td>
                    <td width="25%">@obj.Author</td>
                    <td width="25%">@obj.Info</td>
                    <td width="15%"><a href="@obj.Link">Buy here</a></td>
                    <td width="10%" class="text-center">
                        <div class="d-flex">
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
